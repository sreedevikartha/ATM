user_pin = "1234"
balance = 1000

pin = input("Enter the PIN: ")

if pin == user_pin:
    while True:
        print("\nATM Menu")
        print("1. Check Balance")
        print("2. Deposit")
        print("3. Withdraw")
        print("4. Exit")
        choice = input("Enter a choice: ")

        if choice == "1":
            print(f"Your balance: ${balance}")
        elif choice == "2":
            amount = float(input("Deposit amount: "))
            balance += amount
            print(f"Updated balance: ${balance}")
        elif choice == "3":
            amount = float(input("Withdraw amount: "))
            if amount <= balance:
                balance -= amount
                print(f"Updated balance: ${balance}")
            else:
                print("Insufficient funds!")
        elif choice == "4":
            print("Thank you! Goodbye.")
            break  # âœ… This break is now correctly inside the while loop
        else:
            print("Invalid choice.")
else:
    print("Incorrect PIN!")
